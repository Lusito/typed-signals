{
  "name": "typed-signals",
  "version": "1.0.3",
  "description": "A type checked signal library for TypeScript (and JavaScript)",
  "keywords": [
    "TypeScript",
    "Signal",
    "Event",
    "Publish",
    "Subscribe"
  ],
  "author": "Santo Pfingsten",
  "license": "CC0-1.0",
  "homepage": "https://github.com/Lusito/typed-signals",
  "bugs": {
    "url": "https://github.com/Lusito/typed-signals/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lusito/typed-signals.git"
  },
  "files": [
    "dist/src",
    "src/",
    "tsconfig.json"
  ],
  "main": "dist/src/Signal.js",
  "types": "dist/src/Signal.d.ts",
  "scripts": {
    "pretest": "tsc",
    "test": "nyc mocha --require source-map-support/register \"./dist/test/**/*.js\"",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "doc": "typedoc --out docs --excludeNotExported src"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage/**/*",
      "test/**/*",
      "dist/test/**/*",
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.1",
    "awesome-typescript-loader": "^5.2.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "source-map-loader": "^0.2.4",
    "source-map-support": "^0.5.9",
    "typescript": "^3.1.5"
  }
}
