{
  "name": "typed-signals",
  "version": "1.0.1",
  "description": "A type checked signal library for TypeScript (and JavaScript)",
  "keywords": [
    "TypeScript",
    "Signal",
    "Event",
    "Publish",
    "Subscribe"
  ],
  "author": "Santo Pfingsten",
  "license": "CC0-1.0",
  "homepage": "https://github.com/Lusito/typed-signals",
  "bugs": {
    "url": "https://github.com/Lusito/typed-signals/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lusito/typed-signals.git"
  },
  "files": [
    "dist/",
    "src/",
    "test/",
    "tsconfig.json"
  ],
  "main": "dist/src/Signal.js",
  "types": "src/Signal.ts",
  "scripts": {
    "pretest": "tsc",
    "test": "nyc mocha --require source-map-support/register \"./dist/test/**/*.js\"",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "doc": "typedoc --out docs --excludeNotExported src"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage/**/*",
      "test/**/*",
      "dist/test/**/*",
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.46",
    "awesome-typescript-loader": "^3.2.3",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "mocha": "^4.0.1",
    "mocha-typescript": "^1.1.11",
    "nyc": "^11.2.1",
    "source-map-loader": "^0.2.2",
    "source-map-support": "^0.5.0",
    "typescript": "^2.5.3"
  }
}
